---
// Random background image selection
const backgrounds = [
  '/backgrounds/085A0479.jpg',
  '/backgrounds/DSC04485.jpg',
  '/backgrounds/Screen-Shot-2024-07-25-at-1.13.32-PM-700x700.png',
  '/backgrounds/Screen-Shot-2024-07-25-at-1.29.00-PM-700x700.png',
];
const randomBg = backgrounds[Math.floor(Math.random() * backgrounds.length)];
---

<main
  class="fixed inset-0 pt-14 overflow-hidden bg-gray-900"
  style={`background-image: url(${randomBg}); background-size: cover; background-position: center;`}
>
  <!-- Background overlay - darker to fade image more -->
  <div class="absolute inset-0 bg-gray-900/90"></div>

  <!-- Logo watermarks (bottom-right) -->
  <div class="absolute bottom-16 right-8 flex items-end gap-4 z-0">
    <!-- Spark logo -->
    <div class="opacity-40">
      <img src="/BUSPARK_Main_Blck Bkgrnd_lg.png" alt="BU Spark!" class="h-48" />
    </div>
    <!-- HackBU logo -->
    <div class="opacity-50">
      <img src="/hackbu-logo.png" alt="HackBU" class="h-48" />
    </div>
  </div>

  <!-- Main desktop area -->
  <div class="relative z-10 h-full" id="desktop">
    <slot />
  </div>

  <!-- "Powered by" footer -->
  <div class="absolute bottom-4 right-8 text-sm text-spark-eggshell/60 font-mono z-0">
    Powered by BU IS&T
  </div>
</main>
